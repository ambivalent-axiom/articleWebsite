<div class="m-2">
    <h2 class="text-2xl font-bold mb-4">Comments</h2>
    {% for comment in comments %}
        <div class="m-2 p-6 bg-slate-400 rounded-md shadow-2xl" id="{{ comment.id }}">
            <p class="italic text-sm">By: {{ comment.author }}</p>
            <p class="italic text-sm">Posted on: {{ comment.createdAt | date }}</p>
            <p class="italic text-sm">Likes: {{ comment.likes }}</p>
            <div class="m-1 p-2 bg-slate-300 rounded-md shadow-2xl">
                <p>{{ comment.content }}</p>
            </div>
            <div class="flex">
                <a href="/comment/like/{{ comment.id }}?article={{ article.id }}">
                    <div class="p-1 mt-3 m-1 bg-slate-500 hover:bg-slate-300 rounded-md shadow-2xl w-28 text-center">Like</div>
                </a>
                <a href="/comment/delete/{{ comment.id }}?article={{ article.id }}">
                    <div class="p-1 mt-3 m-1 bg-slate-500 hover:bg-slate-300 rounded-md shadow-2xl w-28 text-center">Delete</div>
                </a>
            </div>
        </div>
    {% endfor %}
</div>