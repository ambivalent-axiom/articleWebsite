<div class="m-2">
    <h2 class="text-2xl font-bold mb-4">Add Comment</h2>
    <form action="" method="post" enctype="multipart/form-data">
        <label for="articleId" class="p-2">Article ID:
            <input class="bg-slate-400 w-80" type="email" name="articleId" value="{{ article.id }}" readonly>
        </label>
        <div class="flex flex-row">
            <div class="p-2">
                <label for="author">Name:
                    <input class="rounded-md" type="text" name="author">
                </label>
            </div>
            <div class="p-2">
                <label for="email">Email:
                    <input class="rounded-md" type="email" name="email">
                </label>
            </div>
        </div>
        <div class="container  px-4">
            <label for="content">
                <textarea class="rounded-md" name="content" cols="59" rows="5"></textarea>
            </label>
        </div>
        <button name="create_post" value="Add">
            <div class="p-1 mt-3 m-5 bg-slate-500 hover:bg-slate-300 rounded-md shadow-2xl w-28 text-center">
                Add
            </div>
        </button>
    </form>
</div>